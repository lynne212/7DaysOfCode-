    <script>
        var nome = prompt("Qual o seu nome?")
        var idade = prompt("Quantos anos você tem?")
        var linguagem_programação = prompt("Qual linguagem de programação você está estudando?")

        window.alert('Olá, ' + nome + '. Você tem ' + idade + ' anos e já está aprendendo ' + linguagem_programação + '!')

        var sim_nao = prompt ("Você gosta de estudar " + linguagem_programação + '?' + '(Responda com 1 para SIM ou 2 para NÃO)')

        if (sim_nao == 1) {
            window.alert ("Muito bom! Continue estudando e você terá muito sucesso.")
        } else {
            window.alert ("Ahh que pena... Já tentou aprender outras linguagens?")
        }
    </script>
