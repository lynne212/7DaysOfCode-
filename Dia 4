    <title>DESAFIO - Dia 4</title>
</head>
<body>
    <script>
       var contador = 3    
        var numeroaleatorio = Math.floor(Math.random() * 11)

        for (var i = 1; i <= 3; i++) {
            var valor = prompt ("Informe um número:")
            if (valor == numeroaleatorio) {
                window.alert ("PARABÉNS! \n Você acertou o número")
                break;
            } else {
                contador = contador - 1
                window.alert ("Você ERROU! \n Tem " + (contador) + " tentativas")
            }
        }

        window.alert ("O número era: " + (numeroaleatorio))
    </script>
    
</body>
</html>
